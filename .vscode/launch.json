{
    "version": "2.0.0",
    "configurations": [
        {
            "preLaunchTask": "build", // forces tasks.json build group to run
            "name": "BASE_TEST",
            "type": "cppdbg",
            "request": "launch",
            "program": " ${workspaceFolder}/tests/base_text.exe",
            "args": [""],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}